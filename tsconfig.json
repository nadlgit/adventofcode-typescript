{
  "include": ["src"],
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2021",
    "module": "Node16",
    "moduleResolution": "Node16",
    "paths": {
      "#utils/*": ["./src/utils/*"]
    },
    "types": ["vitest/globals", "jest-extended"]
  }
}
